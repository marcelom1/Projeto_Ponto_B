@using PontoB.Models.ViewModels.VAusencia

@model AusenciaViewModels
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}
@section css{

    <link rel="stylesheet" href="~/Content/CSS/select2.min.css" />
    <link rel="stylesheet" href="~/Content/CSS/cadastroAusencia.css" />

}

<h2 class="pb-3">Cadastro Ausências</h2>
@Html.ActionLink("Novo", "/Form", null, new { @class = "btn botao_padrao btn-sm" })
@using (Html.BeginForm("Adiciona", "Ausencia", FormMethod.Post, new { @id = "CadastroAusencia", @name = "CadastroAusencia" }))
{
    <div class="form-row pb-1 pt-4 ">
        <div class="form-group col-md-2">
            <label for="CodigoEscala">Código</label>
            <div class="input-group mb-1">
                <input type="text" class="form-control" id="Ausencia_id" disabled placeholder="Código" name="ausencia.Id" value="@Model.AusenciaColaboradores.Ausencia.Id" />
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Index", "Ausencia")';" type="button" id="button-addon2"><img src="~/Content/img/Lupa2.png" width="20" height="20" alt=""></button>
                </div>
            </div>
        </div>
        <div class="form-group col-md-7">
            <label for="DescricaoEscala">Descrição</label>
            <input type="text" class="form-control" id="DescricaoEscala" name="ausencia.Descricao" placeholder="Ex: Faltas em Junho/20XX" value="@Model.AusenciaColaboradores.Ausencia.Descricao" />
            <span class="erro" id="Erro_DescricaoEscala">@Html.ValidationMessage("ausencia.Descricao")</span>
        </div>
    </div>
}
<span class="erro" id="Erro_Ausencia">@Html.ValidationMessage("ausenciaColaboradores.Erro")</span>
<div class="" id="cadastroAusencia">

</div>
<button type="button" id="EnvioEscala" class="btn botao_cor_verde btn-lg">Salvar</button>
<div class="form-row float-right">
    <div class="form-group col-md-1">
        <button type="button" id="Botao_Excluir_Formulario_Ausencia" class="btn botao_cor btn-lg">Excluir</button>
    </div>
</div>

@section scripts{

    <script src="~/Content/js/select2.min.js"></script>
    <script src="~/Content/js/pt-BR.js"></script>
    <script src="~/Content/js/CadastroAusencia.js"></script>
    <script src="~/Content/js/DetalhesAusencia.js"></script>
    


}

