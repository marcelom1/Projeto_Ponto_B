@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";

}
@model PontoB.Models.ViewModels.VRelatorios.Home.TopHomeViewModels

@section css{
    <link rel="stylesheet" href="~/Content/CSS/Graficos.css">
}


<div class="Cart container">
    <ul class="homeGrafico row">
        <li class=" col-sm">
            <div id="conteiner">
                <canvas id="myChart"></canvas>
            </div>
        </li>
        <li class="col-sm">
            <div id="conteiner">
                <canvas id="myChart2"></canvas>
            </div>
        </li>
    </ul>
</div>
<div class="Cart container">
    <ul class="homeGrafico row">
        <li class=" col-sm">
            <div id="conteiner">
                <h2>Top Horas Excedentes <img src="~/Content/img/Estrela-Amarela.png" width="40" height="40" /></h2>
                <h6>@Model.DataInicio até @Model.DataFim</h6>
                <table class="table table-hover TopFive">
                    @{int i = 1;}
                    @foreach (var horas in Model.HorasExcedentes)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@horas.NomeColaborador</td>
                            <td>@((horas.HorasPontuacao / 60).ToString("D2") + ":" + ((horas.HorasPontuacao % 60) < 0 ? ((horas.HorasPontuacao % 60) * -1).ToString("D2") : (horas.HorasPontuacao % 60).ToString("D2")))</td>
                      
                           

                        </tr>
                        i++;
                    }


                    
                </table>
            </div>
        </li>
        <li class=" col-sm">
            <div id="conteiner">
                <h2>Top Horas Faltas <img src="~/Content/img/estrela-Vermelha.png" width="40" height="40" /></h2>
                <h6>@Model.DataInicio até @Model.DataFim</h6>
                <table class="table table-hover TopFive">
                    @{int j = 1;}
                    @foreach (var horas in Model.HorasFalta)
                    {
                        <tr>
                            <td>@j</td>
                            <td>@horas.NomeColaborador</td>
                            <td>@((horas.HorasPontuacao / 60).ToString("D2") + ":" + ((horas.HorasPontuacao % 60) < 0 ? ((horas.HorasPontuacao % 60) * -1).ToString("D2") : (horas.HorasPontuacao % 60).ToString("D2")))</td>
                      

                        </tr>
                        j++;
                    }
                </table>
            </div>
        </li>
        <li class=" col-sm">
            <div id="conteiner">
                <h2>Top Pontuação <img src="~/Content/img/Trofeu.png" width="40" height="40" /></h2>
                <h6>@Model.DataInicio até @Model.DataFim</h6>
                <table class="table table-hover TopFive">
                    @{int k = 1; }
                    @foreach (var pontos in Model.TopPontos.OrderByDescending(x=>x.HorasPontuacao))
                    {
                        <tr>
                            <td>@k</td>
                            <td>@pontos.NomeColaborador</td>
                            <td>@pontos.HorasPontuacao</td>

                        </tr>
                        k++;
                    }

                </table>
            </div>
        </li>
    </ul>
</div>



@section scripts{
    <script src="~/Content/js/moment.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    <script src="~/Content/js/Graficos/Registros.js"></script>

}