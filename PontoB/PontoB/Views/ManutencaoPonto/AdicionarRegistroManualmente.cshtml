@model PontoB.Models.ViewModels.VManutencaoPonto.ManutencaoPontoViewModel
<div class="modal-header">
    <h3 class="modal-title" id="TituloModalLongoExemplo">@Model.DiaDaSemana - @Model.Dia.ToShortDateString()</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <h5>Escala Prevista</h5>
    <p>@Model.EscalaHorario</p>


    <h5 class=" pt-3">Adicionar Horario</h5>
    @using (Html.BeginForm("AdicionarRegistroManutencao", "CalculoPonto", FormMethod.Post, new { @id = "AdicionarRegistroManutencao", @name = "AdicionarRegistroManutencao" }))
    {
        <input value="@Model.Dia.ToShortDateString()" class="Oculto" id="DiaManutencao" />
        <input value="@Model.colaboradorId" class="Oculto" id="ColaboradorIdManutencao" />
        <div class="form-row pb-1 pt-4">
            <div class="form-group col-md-5">
                <input type="time" class="form-control" id="HoraRegistroManutencao" name="" value="">
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="ObservacaoManutencao" placeholder="Observação">
            </div>
            <div class="form-group col-md-3">
                <div class="form-group">
                    <button type="button" id="RegistroAdicionar" class="btn btn-secondary botao_cor btn-sm">Adicionar</button>
                </div>
            </div>
        </div>
    }
</div>
