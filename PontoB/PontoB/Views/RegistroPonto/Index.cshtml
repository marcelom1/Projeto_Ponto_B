@model PontoB.Models.RegistroPontoModels.RegistroPonto
@{
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
    ViewBag.Title = "Registro Ponto";
}


@section css{
  
    <link rel="stylesheet" href="~/Content/CSS/RegistroPonto.css">
}

<div class="form-signin  ">
    <img class="mb-4" src="~/Content/img/LogoB.gif" alt="" width="153" height="141">
    <h1 class="h3 mb-3 font-weight-normal texto">Registro Ponto</h1>
    <h3 class="h3 mb-3 font-weight-normal texto">@Model.Colaborador.NomeCompleto</h3>
    <h5 id="ultimoRegistro">Último Registro: @ViewBag.UltimoRegistro  </h5>
    <div class="texto">
        <label id="data"></label>
    </div>
    <div class="texto">
        <label id="hora"></label>
    </div>

    <div class="checkbox mb-3">
    </div>
    <button class="btn btn-lg btn-block botao_cor" id="registrar" type="button">Registrar</button>

</div>


@section scripts{

    
    <script src="~/Content/js/moment.js"></script>
    <script src="~/Content/js/RegistroPonto.js" ></script>
}